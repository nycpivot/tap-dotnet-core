<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tap.Dotnet.Core.Web.Mvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tap.Dotnet.Core.Web.Mvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Tap.Dotnet.Core.Web.Mvc</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <h4>Weather Forecast</h4>
            <table style="width:100%">
                <tr>
                    <td>@ViewBag.Forecast1.Date.DayOfWeek</td>
                    <td>@ViewBag.Forecast2.Date.DayOfWeek</td>
                    <td>@ViewBag.Forecast3.Date.DayOfWeek</td>
                    <td>@ViewBag.Forecast4.Date.DayOfWeek</td>
                    <td>@ViewBag.Forecast5.Date.DayOfWeek</td>
                </tr>
                <tr>
                    <td>@ViewBag.Forecast1.TemperatureF℉</td>
                    <td>@ViewBag.Forecast2.TemperatureF℉</td>
                    <td>@ViewBag.Forecast3.TemperatureF℉</td>
                    <td>@ViewBag.Forecast4.TemperatureF℉</td>
                    <td>@ViewBag.Forecast5.TemperatureF℉</td>
                </tr>
                <tr>
                    <td>@ViewBag.Forecast1.Summary</td>
                    <td>@ViewBag.Forecast2.Summary</td>
                    <td>@ViewBag.Forecast3.Summary</td>
                    <td>@ViewBag.Forecast4.Summary</td>
                    <td>@ViewBag.Forecast5.Summary</td>
                </tr>
            </table>
            <br />
            &copy; 2023 - Tap.Dotnet.Core.Web.Mvc - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
